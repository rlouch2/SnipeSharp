{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SnipeSharp.Tests/SnipeSharp.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/SnipeSharp.Tests/SnipeSharp.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/SnipeSharp.Tests/SnipeSharp.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=opencover",
                "/p:CoverletOutput=${workspaceFolder}/OpenCover.xml"
            ],
            "problemMatcher": "$msCompile",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "lcov test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/SnipeSharp.Tests/SnipeSharp.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=${workspaceFolder}/lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "clean coveragereport",
            "type": "shell",
            "windows": {
                "command": "Remove-Item -Recurse \"${workspaceFolder}/coveragereport/*\""
            },
            "linux": {
                "command": "rm -rf \"${workspaceFolder}/coveragereport/*\""
            }
        },
        {
            "label": "coveragereport",
            "command": "dotnet",
            "type": "process",
            "dependsOn": [
                "clean coveragereport",
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/SnipeSharp.Tests"
            },
            "args": [
                "reportgenerator",
                "-reports:${workspaceFolder}/OpenCover.xml",
                "-targetdir:${workspaceFolder}/coveragereport"
            ],
            "problemMatcher": []
        }
    ]
}
